#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    string s;
    cin >> s;
    int c0=0,c1=0;
    for (int i = 0; i < s.length(); i++)
    {
        if (s[i] == '0')
        {
            c0+=1;   
        }
        else
        {
            c1+=1;
        }
    }
    cout<<abs(c0-c1)<<endl;
    return 0;
}
